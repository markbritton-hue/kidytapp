rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Channel list — anyone can read, only logged-in parent can write
    match /channels/{channelId} {
      allow read: true;
      allow write: if request.auth != null;
    }

    // App config — anyone can read (to detect first-time setup),
    // only logged-in parent can write
    match /config/{document} {
      allow read: true;
      allow write: if request.auth != null;
    }
  }
}
