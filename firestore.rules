rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Per-user channel list — anyone can read (kids page needs it),
    // only the owning parent can write
    match /users/{userId}/channels/{channelId} {
      allow read: true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // App config — anyone can read (to detect first-time setup),
    // only logged-in parent can write
    match /config/{document} {
      allow read: true;
      allow write: if request.auth != null;
    }
  }
}
