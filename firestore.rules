rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId}/channels/{channelId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Kids pages are unauthenticated, so writes are open;
    // only the authenticated parent can read their own history
    match /users/{userId}/watchHistory/{sessionId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if true;
    }

    // Kids pages write nowPlaying unauthenticated; only parent can read
    match /users/{userId}/status/{document} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if true;
    }

    match /config/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
